{
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./dist",
        "module": "esnext",
        "target": "esnext",
        "lib": ["ESNext"],
        "declaration": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "typeRoots": ["./node_modules/@types"]
    },
    "include": ["src/index.ts"],
    "exclude": ["node_modules", "dist", "test/index.test.ts"]
}
